<section>
    <div class="container">
        <div class="form-row">
            <div class="col-md-6">
                <h2 class="textc-enter mt-4"> Edit User Information</h2>
                <form action="/admin/edit-user/{{user._id}}" method="post" >
                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control" value="{{user.Name}}">

                    <label for="">Email</label>
                    <input type="email" name="Email" class="form-control" placeholder="Email" value="{{user.Email}}">

                    <label for="">Phone Number</label>
                    <input type="tel" name="Number" class="form-control" value="{{user.Number}}">

                    <label for="">Age</label>
                    <input type="number" name="Age" class="form-control" value="{{user.Age}}">

                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>