<div class="container">
    <div class="row ">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 mt-3">
            <form action="/signup" method="post" >
                <h3 class="text-center text-primary">CREATE NEW ACCOUNT</h3>

                <div class="form-group ">
                    <label class="mt-4" for="first_name">Name</label>
                    <input type="text" class="form-control" name="Name" id="first_name" placeholder="Name">
                </div>


                <div class="form-group">
                    <label class="mt-4" for="email">Email Address</label>
                    <input type="text" class="form-control" name="Email" id="email" placeholder="Email Address">
                </div>

                <div class="form-group">
                    <label class="mt-4" for="age">Age</label>
                    <input type="number" class="form-control" name="Age" >
                </div>
                <div class="form-group">
                    <label class="mt-4" for="pw">Phone Number</label>
                    <input type="tel" class="form-control" name="Number" >
                </div>
                <div class="form-group">
                    <label class="mt-4" for="pw">Password</label>
                    <input type="password" class="form-control" name="Password" id="pw">
                    
                <div class="form-group ">
                <div class="row">
                    <div class="col-md-8 ">
                    <a class="text-decoration-none" href="/login">Already have account?</a>
                    </div>
                </div>
             </div>
            </div>
                <button type="submit" class="btn btn-primary mt-4">Submit</button>

            </form>
        </div>
    </div>
</div>